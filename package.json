{
  "name": "blobpi",
  "version": "0.1.0",
  "main": "build/index.js",
  "repository": "git@github.com:jujax/blobpi.git",
  "author": "Julien Pelletier <julien.pelletier8@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc --build ./tsconfig.json",
    "build:dev": "tsc --build ./tsconfig.json --watch",
    "launch": "node build/main.js",
    "launch:dev": "nodemon build/main.js",
    "prepare": "husky install",
    "lint": "yarn eslint src/ --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "yarn build && yarn launch",
    "start:dev": "yarn build:dev && yarn launch:dev"
  },
  "dependencies": {
    "dotenv-defaults": "^5.0.2",
    "express": "^4.18.2",
    "liquid": "^5.1.1",
    "node-raspistill": "^2.0.1",
    "pigpio": "^3.3.1",
    "pm2": "^5.3.0",
    "timestring": "^6.0.0"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/cron": "^2.0.1",
    "@types/express": "^4.17.17",
    "@types/rpi-gpio": "^2.1.1",
    "@types/timestring": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "prettier": "^2.8.7",
    "release-it": "^15.10.1",
    "tsc": "^2.0.4",
    "typescript": "^5.0.3"
  },
  "lint-staged": {
    "*.ts": [
      "yarn format",
      "yarn lint",
      "bash -c 'yarn build'"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
